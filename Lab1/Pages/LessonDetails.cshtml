@page
@model Lab1.Pages.LessonDetailsModel
@{
    ViewData["Title"] = "Lesson Details";
}

<h2>Lesson Details</h2>
<div>
    <p><strong>Student:</strong> @Model.Lesson.StudentName</p>  
    <p><strong>Tutor:</strong> @Model.Lesson.TutorName</p>
    <p><strong>Subject:</strong> @Model.Lesson.Subject</p>
    <p><strong>Date:</strong> @Model.Lesson.Date.ToShortDateString()</p>
    <p><strong>Time:</strong> @Model.Lesson.Time.ToString("hh\\:mm")</p>
    <p><strong>Duration:</strong> @Model.Lesson.Duration hours</p>
    <p><strong>Notes:</strong> @Model.Lesson.Notes</p>
</div>
