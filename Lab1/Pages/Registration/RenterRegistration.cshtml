@page
@model Lab1.Pages.Registration.RenterRegistrationModel
<h2>Group Registration</h2>

<form method="post">
    <div class="form-group">
        <label for="FirstName">First Name</label>
        <input type="text" class="form-control" id="FirstName" name="FirstName" required />
    </div>

    <div class="form-group">
        <label for="LastName">Last Name</label>
        <input type="text" class="form-control" id="LastName" name="LastName" required />
    </div>

    <div class="form-group">
        <label for="PhoneNumber">Phone Number</label>
        <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" required />
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" required />
    </div>

    <div class="form-group">
        <label for="RentalDuration">Duration (Minutes)</label>
        <input type="number" class="form-control" id="Re" name="FirstName" required />
    </div>

    <div class="form-group">
        <label for="RentalDate">Rental Date (XX/XX/XXXX)(</label>
        <input type="date" class="form-control" id="FirstName" name="FirstName" required />
    </div>

    <div class="form-group">
        <label for="RentalPrice">Price</label>
        <input type="number" class="form-control" id="RentalPrice" name="RentalPrice" required />
    </div>

    <div class="form-group">
        <label for="ApprovedRenters">Approval yet?</label>
        <input type="text" class="form-control" id="ApprovedRenters" name="ApprovedRenters" required />
    </div>

    <button type="submit" class="btn btn-primary">Register Group</button>

</form>
