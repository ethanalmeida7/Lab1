@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Lab1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Lab1.styles.css" asp-append-version="true" />
</head>
<style>
    /* Custom styles */
    body {
        background-color: #f8f9fa;
    }

    nav {
        background-color: #343a40;
    }

    .navbar-brand {
        font-size: 1.5rem;
        font-weight: bold;
        color: #f8f9fa;
    }

    .navbar-nav .nav-link {
        color: #f8f9fa;
        margin-right: 1rem;
        font-size: 1.1rem;
    }

        .navbar-nav .nav-link:hover {
            color: #ced4da;
        }

    .navbar-text {
        color: #f8f9fa;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

   
    .navbar {
        padding: 1rem;
    }

    .container {
        max-width: 1140px;
    }

</style>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Lab 2</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Registration
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDropdown">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-page="/Registration/ParentRegistration">Parent Registration</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-page="/Registration/StudentRegistration">Student Registration</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-page="/Registration/GroupRegistration">Group Registration</a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Reservation
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDropdown">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-page="/Reservation/RoomReservation">Reserve A Room</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-page="/Reservation/LessonReservation">Book A Lesson</a>
                                </li>
                            </ul>
                        </li>
                    </ul>

                    <ul class="navbar-nav ml-auto">
                        @if (HttpContextAccessor.HttpContext.Session.GetString("Username") != null)
                        {
                            <li class="nav-item">
                                <span class="navbar-text">Welcome, @HttpContextAccessor.HttpContext.Session.GetString("Username")</span>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-page="/Login/DBLogin" asp-page-handler="LogoutHandler">
                                    <input type="submit" class="btn btn-danger" value="Logout" />
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Login/DBLogin">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Lab2 - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
